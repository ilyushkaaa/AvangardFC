<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/windowNorth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/homeTeamTicketsNorth"

                            android:textSize="25sp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/homeTeamTicketsCityNorth"

                            android:textSize="16sp">

                        </TextView>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:id="@+id/imageHomeTicketsNorth">

                    </ImageView>
                    <ImageView
                        android:layout_marginStart="42dp"
                        android:layout_width="42dp"
                        android:layout_height="38dp"
                        android:id="@+id/imageGuestTicketsNorth">

                    </ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/guestTeamTicketsNorth"

                            android:textSize="25sp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/guestTeamTicketsCityNorth"

                            android:textSize="16sp">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/titleTribunaSouth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Северная трибуна"
                    android:textStyle="bold"

                    android:textSize="25sp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/sectorTribunaNorth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Сектор"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    >

                </TextView>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 ряд">

                        </TextView>
                        <TextView
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 ряд">

                        </TextView>
                        <TextView
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 ряд">

                        </TextView>
                        <TextView
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 ряд">

                        </TextView>
                        <TextView
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 ряд">

                        </TextView>
                        <TextView
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 ряд">

                        </TextView>
                        <TextView
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7 ряд">

                        </TextView>
                        <TextView
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 ряд">

                        </TextView>
                        <TextView
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9 ряд">

                        </TextView>
                        <TextView
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 ряд">

                        </TextView>

                    </LinearLayout>
                    <GridLayout
                        android:id="@+id/gridLayoutNorth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="10"
                        android:rowCount="10">
                    </GridLayout>
                </LinearLayout>






            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

</androidx.cardview.widget.CardView>